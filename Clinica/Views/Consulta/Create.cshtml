@model Clinica.Models.Consulta
@{
    ViewData["Title"] = "Nova Consulta";
}

<h1 class="mb-4">Nova Consulta</h1>

<form asp-action="Create" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label asp-for="Tratamento" class="form-label"></label>
        <input asp-for="Tratamento" class="form-control" />
        <span asp-validation-for="Tratamento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DatadaConsulta" class="form-label"></label>
        <input asp-for="DatadaConsulta" type="datetime-local" class="form-control" />
        <span asp-validation-for="DatadaConsulta" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Paciente</label>
        <select name="pacientesIds" asp-items="ViewBag.Pacientes" class="form-select" multiple>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
