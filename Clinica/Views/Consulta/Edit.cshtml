@model Clinica.Models.Consulta
@{
    ViewData["Title"] = "Editar Consulta";
}

<h1 class="mb-4">Editar Consulta</h1>

<form asp-action="Edit" class="card p-4 shadow-sm">
    <input type="hidden" asp-for="PacienteId" />

    <div class="mb-3">
        <label asp-for="Procedimento" class="form-label"></label>
        <input asp-for="Procedimento" class="form-control" />
        <span asp-validation-for="Procedimento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DatadaConsulta" class="form-label"></label>
        <input asp-for="DatadaConsulta" type="datetime-local" class="form-control" />
        <span asp-validation-for="DatadaConsulta" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PacienteId" class="form-label">Paciente</label>
        <select asp-for="PacienteId" asp-items="ViewBag.Pacientes" class="form-select"></select>
        <span asp-validation-for="PacienteId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
